@page
@model HotDesk.Pages.AvailDesks.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Available Desks</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AvailDesk.ResvDate.Name" class="control-label"></label>
                <select asp-for="AvailDesk.ResvDateID" class="form-control" asp-items="ViewBag.ResvDateName"></select>
            </div>
            <div class="form-group">
                <label asp-for="AvailDesk.Desk.Name" class="control-label"></label>
                <select asp-for="AvailDesk.DeskID" class ="form-control" asp-items="ViewBag.DeskName"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
