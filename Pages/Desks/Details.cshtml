@page
@model HotDesk.Pages.Desks.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Desk</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Desk.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Desk.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Desk.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Desk.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Desk.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Desk.Category)
        </dd>
        <dt class="col-sm-2">
            Associated Ranges
            
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Range Name</th>
                    <th>From Date</th>
                    <th>To Date</th>
                </tr>
                @foreach (var item in Model.Desk.AvailDesks)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ResvDate.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ResvDate.FromDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ResvDate.ToDate)
                </td>
            </tr>
                }
            </table>
        </dd>

    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Desk.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
