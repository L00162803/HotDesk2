@page
@model HotDesk.Pages.ResvDates.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>ResvDate</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ResvDate.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ResvDate.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ResvDate.FromDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ResvDate.FromDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ResvDate.ToDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ResvDate.ToDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ResvDate.AvailDesks)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Desk Name</th>
                    <th>Location</th>
                </tr>
                @foreach (var item in Model.ResvDate.AvailDesks)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Desk.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Desk.Location)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.ResvDate.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
